
{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020", 
    "lib": ["DOM", "ES2018"],
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "sourceMap": false
  },
  "include": [
    "./*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "deploy"
  ]
}